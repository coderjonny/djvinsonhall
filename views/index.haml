%html.no-js{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}/
    / Set the viewport width to device width for mobile
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title DJ Vinson Hall Official
    / Included CSS Files
    %link{:href => "stylesheets/app.css", :rel => "stylesheet"}
    %link{:href => "stylesheets/vinny.css", :rel => "stylesheet"}
      %script{:src => "javascripts/foundation/modernizr.foundation.js"}
  %body
    .row
      .twelve.columns
        %h2.mainheader DJ Vinson Hall
        %hr/

    .row
      .twelve.columns
        .panel
          <iframe width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=http%3A%2F%2Fapi.soundcloud.com%2Ftracks%2F50277000"></iframe>

    .row
      .nine.columns
        -#%h3 Recent photos
        / Grid Example
        .row
          .eleven.columns
            .panel
              -@recent.each do |x|
                %img{src: x}

      .three.columns
        %ul.disc
          %li.social_links
            %a{:href => "http://facebook.com/djvinson.hall"} facebook
          %li.social_links
            %a{:href => "http://instagram.com/vinson_hall"} instagram
          %li.social_links
            %a{:href => "http://twitter.com/vinson_hall"} twitter

      .three.columns
        %h3
          %dl.tabs
            %dd.active
              %a{:href => "#simple1"} Tour Dates
          %ul.tabs-content
            %li#simple1Tab.active
              Dec. 22nd @ Avalon

    / Included JS Files (Uncompressed)
    %script{:src => "javascripts/foundation/jquery.js"}
